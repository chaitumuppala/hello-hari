<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare that the app requires phone features -->
    <uses-feature android:name="android.hardware.telephony" android:required="true" />
    
    <!-- Explicitly declare permissions with maxSdkVersion removed -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!-- Normal permissions, no runtime request needed -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission configuration for Android 14 -->
    <permission-group
        android:name="${applicationId}.permission-group.PHONE"
        android:label="@string/app_name"
        android:description="@string/app_name" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.DIAL" />
                <action android:name="android.intent.action.CALL" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="tel" />
            </intent-filter>
        </activity>
    </application>
</manifest>
